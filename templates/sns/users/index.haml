- extends 'layout/main'

- block title
  主页

- block center_content
  .users-index-left
    - if new_notification_count
      .section-news
        你有(={new_notification_count})条新通知，点击
        %a{href:"{% url sns.views.notifications.index %}"}此处
        查看
    %form.form-post
      - csrf_token
      %legend 发布我的新鲜事
      %textarea.post{rows:3,placeholder:'写些什么吧...'}
      %button.btn.btn-primary{type:'submit'} 发布 
    :javascript
      $(".post").atTips()
      $(".form-post").submit(function(){
        var content = $(this).find(".post").val();
        var error = "";
        if (content.length == 0) error = "请输入您希望发布的内容...";
        else if (content.length > 200) error = "您输入的内容太长了。";
        if (error.length > 0){
          $(this).find(".post").tooltip({
            placement: 'top',
            title: error, 
            trigger: "manual",
          }).tooltip("show");
          $(this).find(".post").unbind('click keydown').bind('click keydown', function(){
            $(this).tooltip('destroy');
          });
          return false;
        }
        $(this).find(".btn-primary").addClass("disabled").html("正在发布，请稍后...");
        $.post("/posts", {
          "content": content,
          "csrfmiddlewaretoken": $(this).find("input[name='csrfmiddlewaretoken']").val()
        }, function(result){
          if (result.status == "ok"){
            window.location.reload();
          }
        });
        return false;
      });
    .section-news
      %h1 新鲜事
      {% include "sns/posts/_appending_list" with posts=posts %}

- block right_content
  .users-index-right
    .section
      %h5.section-title 搜索好友
      %form.form-inline{action:"{% url sns.views.users.search %}"}
        %input{type:'text',placeholder:'查找好友...',name:'q'}
        %button.btn{type:'submit'} 搜索
    .section
      %h5.section-title 我的粉丝
        %a{ 'href': '#followersModal', 'data-toggle': 'modal', 'id': 'allfollowers', 'user_id':"{{user.id}}" }
          显示全部
      {% include "sns/users/_followers" %}
      - if followers
        {% include "sns/users/_sidebar_list" with users=followers %}
      - else
        .muted 还没有人关注我...    
    .section
      %h5.section-title 我的关注
        %a{ 'href': '#followeesModal', 'data-toggle': 'modal', 'id': 'allfollowees', 'user_id':"{{user.id}}" }
          显示全部
      {% include "sns/users/_followees" %}
      - if followees
        {% include "sns/users/_sidebar_list" with users=followees %}
      - else
        .muted 还没有关注任何人...
    .section
      %h5.section-title 最新注册
      - if latest_users
        {% include "sns/users/_sidebar_list" with users=latest_users %}
      - else
        .muted 还没有任何人注册...