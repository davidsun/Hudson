- extends "layout/login_signup"

- block title
  登录

- block content
  .span8.offset2
    .page-header
      %h1 登录
    %form.form-horizontal{action:"/login/", method:"post"}
      - csrf_token
      - if form.non_field_errors
        .alert.alert-error
          {{ form.non_field_errors.as_text }}
      - for field in form
        .control-group{class:"{% if field.errors %}error{% endif %}"}
          %label.control-label ={field.label}
          .controls
            ={field}
            - if field.errors
              %span.help-inline= field.errors.as_text
      .form-actions
        %button.btn.btn-large.btn-primary{type:'submit'} 登&nbsp;&nbsp;录
        %a.btn.btn-large{type:'submit', href:"{% url sns.views.users.signup %}"} 注&nbsp;&nbsp;册
