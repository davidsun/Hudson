- extends "layout/login_signup"

- block title
  登录

- block content
  .span8.offset2
    .page-header
      %h1 注册
    %form.form-horizontal{action:"{% url sns.views.users.signup %}", method:"post"}
      - csrf_token
      .control-group
        %label.control-label 邮箱
        .controls
          %input.input-xlarge{type:"email", placeholder:"邮箱", name:'email'}
      .control-group
        %label.control-label 用户名
        .controls
          %input.input-xlarge{type:"text", placeholder:"用户名", name:'username'}
      .control-group
        %label.control-label 密码
        .controls
          %input.input-xlarge{type:"password", placeholder:"密码", name:'password'}
      .control-group
        %label.control-label 重复密码
        .controls
          %input.input-xlarge{type:"password", placeholder:"重复密码", name:'password'}
      .form-actions
        %button.btn.btn-large.btn-primary{type:'submit'} 注&nbsp;&nbsp;册
        %a.btn.btn-large{type:'submit', href:"{% url sns.views.users.login %}"} 返回登录
