- extends 'layout/site'

- block site_content
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container
        %a.brand{href:'/'} Hudson
        .nav-collapse
          %ul.nav
            %li
              %a{href:'/'} 主页
            %li
              %a{href:"{% url sns.views.users.show request.user.id %}"} 个人主页
        .nav-collapse.collapse.pull-right
          %ul.nav
            %li
              %a 欢迎，={ request.user.username }！
            %li
              %a{href:"{% url sns.views.users.logout %}"} 登出
  .container.main-content
    .row
      .span8.main-center-content-wrap
        .main-center-content
          - block center_content
      .span4.main-right-content-wrap
        .main-right-content
          - block right_content
