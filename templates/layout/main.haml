- extends 'layout/site'

- block site_content
  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container
        %a.brand{href:'/'} Hudson
        .nav-collapse
          %ul.nav
            %li
              %a{href:'/'} 主页
            %li
              %a{href:"{% url sns.views.users.show request.user.id %}"} 个人主页
            %li
              %a{href:"{% url sns.views.posts.liked %}"} 我的收藏
            %li
              %a{href:"{% url sns.views.notifications.index %}"} 我的通知
          %ul.nav.pull-right
            %li.divider-vertical
            %li.dropdown
              %a.dropdown-toggle{href:"javascript:void(0);", "data-toggle":"dropdown"}
                {{ request.user.username }}
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{href:"{% url sns.views.users.edit request.user.id %}"} 编辑资料
                %li
                  %a{href:"{% url sns.views.users.logout %}"} 登出
          %form.navbar-search.pull-right{action: "{% url sns.views.posts.search %}"}
            %input.search-query{type:"text", name:"q", placeholder:"搜索新鲜事..."}
  .container.main-content
    .row
      .span8.main-center-content-wrap
        .main-center-content
          - block center_content
      .span4.main-right-content-wrap
        .main-right-content
          - block right_content
